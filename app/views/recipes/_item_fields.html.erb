<li class="nested-fields ">
			<%= f.fields_for :ingredient do |quantity_ingredient| %>			
					<%= quantity_ingredient.label :name %>
					<%= quantity_ingredient.text_field :name %>						
			<% end %>
			
			<%= f.label :amount %>
			<%= f.text_field :amount %>

