<li class="row nested-fields">
	<div class="small-4 columns">
		<%= f.fields_for :ingredients do |item_ingredient| %>
			<%= item_ingredient.input :name %>
		<% end %>
	</div>
	<div class="small-4 columns">
		<%= f.input :amount %>
	</div>
	<div class="small-4 columns">
		<%= f.input :measure, as: :select, collection: Item::VALID_MEASURES %>
	</div>
		<%= link_to_remove_association "remove", f %>
	</div>
</li>