<li class="control-group nested-fields">
	<div class="controls">
		<%= f.fields_for :ingredient do |item_ingredient| %>
			<%= item_ingredient.label :name, "Name:" %>
			<%= item_ingredient.text_field :name %>
		<% end %>


		<%= f.label :amount, "Amount:" %>
		<%= f.text_field :amount %>

		<%= f.select :measure, as: :select, collection: Item::VALID_MEASURES %>


		<%= link_to_remove_association "remove", f %>
	</div>
</li>