<% @recipes.each do |recipe| %>
	<ul id="recipe-id">
		<li class="<%= cycle('even', 'odd') %> item">
			<h3><%= link_to "#{recipe.title}", recipe_path(recipe)  %></h3>
				<br>
				<p class="time left">Prep: N/A</p>						
				<p class="time right">Cook: N/A</p>
				<br>
				<p class="origin">From: N/A</p>
				<br>

			<% if logged_in? %>
				<p><%= link_to ('<i class="fa fa-trash-o"></i> Delete').html_safe, recipe,
									remote: true,
									method: :delete,
									data: {confirm: 'Are you sure?'},
									class: 'delere_recipe' %>
								 | <%= link_to ('<i class="fa fa-pencil"></i> Edit').html_safe, edit_recipe_path(recipe), remote: true %>								 
					</p>
			<% end %>
		</li>
	</ul>
<% end %>