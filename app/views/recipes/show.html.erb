<div id="recipes_show">
	<!-- TITLE -->
	<aside class="recipe-title">
		<h2><%= @recipe.title %></h2>
		<p><%= link_to ('<i class="fa fa-pencil"></i>Edit recipe').html_safe, edit_recipe_path(@recipe) %></p>
		<h4>From: N/A</h4>
		<ul>
			<li><p class="time">Prep: N/A</p></li>
			<li><p class="time"> Cuisson: N/A</p></li>
		</ul>
			<p class="main_ingr">Main ingredient: N/A</p>

			<h3>Ingredients:</h3>

		<% @recipe.items.each do |item| %>
			<ul>
				<li class='ingredient'>
					<%= item.ingredient.name %>: <%= item.amount %><%= item.measure %>
				</li>
			</ul>
		<% end %>
	</aside>

			<!-- PREP DESCRIPTION -->
	<section class="recipe-prep">
		<h3>Preparation:</h3>
		<p class="description"><%= @recipe.description %></p>
	</section>
		

</div>