<div id="recipes" class="row">
	<div class="small-12">
		<div class="row">	
			<!-- TITLE -->
			<div class="large-5 columns recipes_items left">
				<h1><%= @recipe.name %></h1>
				<h4>From: <%= @recipe.origin %></h4>
				<ul class="small-block-grid-2">
					<li><p class="time">Prep: <%= @recipe.prep_time %></p></li>
					<li><p class="time"> Cuisson: <%= @recipe.cook_time %></p></li>
				</ul>
				<p class="main_ingr"><%= @recipe.main_ingredient %></p>
			</div>

			<!-- PREP DESCRIPTION -->
			<div class="large-6 columns recipes_items right">
				<h2>Preparation:</h2>
				<p class="description"><%= @recipe.description %></p>
			</div>
		</div>

		<!-- INGREDIENT LIST -->
		<div class="row">
			<div class="large-4 columns recipes_items">
				<h2>Ingredients:</h2>
					<% @ingredient.each do |ingredient| %>
						<ul>
							<li class='ingredient'>
								<%= ingredient.name %>
							</li>
						</ul>
					<% end %>
			</div>
		</div>
	
	</div>
</div>