<% provide(:title, "Log in") %>

<div id="login" class="form_container">
	<h2>Log in</h2>

		<!-- FORM FIELDS -->
		<%= form_for(:session, url: login_path) do |f| %>	

			<%= f.email_field :email, placeholder: 'E-mail', class: 'form_field' %> <br>
								
			<%= f.password_field :password, placeholder: 'Password', class: 'form_field' %> 
			<br>
				<span id="fgt-pwd"><%= link_to "(forgot password?)", new_password_reset_path, class: 'small' %></span>
			<br>

			<!-- CHECKBOX -->
			<%= f.label :remember_me  do %>
				<%= f.check_box :remember_me, class: 'checkbox' %>
					<span class="small">Remember me on this computer</span>
			<% end %>
			
			<br>
			<!-- BUTTON -->
			<%= f.submit "Log in", class: 'form_field button' %>
				<p>New user? <%= link_to "Sign up now!", signup_path %></p>

		<% end %>

</div>
