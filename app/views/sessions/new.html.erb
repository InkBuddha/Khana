<% provide(:title, "Log in") %>

<div class="row">
	<div id="login" class="large-8 large-centered columns">
		<div class="content">
			<h1>Log in</h1>

			<div class="row">
				<div class="large-6 large-centered columns">
					<%= form_for(:session, url: login_path) do |f| %>

						<%= f.email_field :email, placeholder: 'E-mail' %>

						<span><%= link_to "(forgot password?)", new_password_reset_path %></span>
						<%= f.password_field :password, placeholder: 'Password' %>


						<%= f.label :remember_me, id: "checkbox", class: 'checkbox' do %>
							<%= f.check_box :remember_me %>
							<span>Remember me on this computer</span>
						<% end %>

						<p>New user? <%= link_to "Sign up now!", signup_path %></p>
						<div class="btn_holder"><%= f.submit "Log in", class: 'button round' %></div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
