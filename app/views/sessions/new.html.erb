<% provide(:title, "Log in") %>

<div id="login" class="form_container_a">
	<h2>Log in</h2>

		<!-- FORM FIELDS -->
		<%= form_for(:session, url: login_path) do |f| %>	

			<%= f.email_field :email, placeholder: 'E-mail', class: 'form_field' %> <br>
								
			<%= f.password_field :password, placeholder: 'Password', class: 'form_field' %> 
			<br>
			<%= link_to "(forgot password?)", new_password_reset_path, class: 'small' %>
			<br>

			<!-- CHECKBOX -->
			<%= f.label :remember_me  do %>
				<%= f.check_box :remember_me, class: 'checkbox' %>
					<span class="small">Remember me</span>
			<% end %>
			<br>
			
			<!-- BUTTON -->
			<%= f.submit "Connect", class: 'form_field button' %>

			<span><p>New user ?</p>
				<br>
			<%= link_to "Register now !", signup_path, class: "button" %></span>

		<% end %>

</div>
