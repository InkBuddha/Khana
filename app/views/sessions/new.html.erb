<% provide(:title, "Log in") %>

<div id="login" class="row">
	<div class="large-12 columns content">
		<!-- <div class=""> -->
			<h1>Log in</h1>

<!-- FORM CONTAINER -->
		<div class="row">

			<!-- FORM FIELDS -->			
			<div class="row">
				<div class="large-5 columns form_field">
					<%= form_for(:session, url: login_path) do |f| %>

						<%= f.email_field :email, placeholder: 'E-mail' %>
				</div>
				<div class="large-5 columns form_field">						
						<%= f.password_field :password, placeholder: 'Password' %>
						<span><%= link_to "(forgot password?)", new_password_reset_path %></span>
				</div>
			</div>

			<!-- CHECKBOX -->
			<div id="checkbox" class="row">
				<div class="large-8 large-centered columns">
					<%= f.label :remember_me, class: 'checkbox' do %>
						<%= f.check_box :remember_me %>
						<span>Remember me on this computer</span>
					<% end %>
				</div>
			</div>


			<!-- BUTTON -->
			<div id="submit_btn" class="row">
				<div class="large-8 large-centered columns">
						<div class="btn_holder"><%= f.submit "Log in", class: 'button round' %></div>
						<p>New user? <%= link_to "Sign up now!", signup_path %></p>
					<% end %>
				</div>
			</div>


		</div>
		<!-- </div> -->

	</div>
</div>
