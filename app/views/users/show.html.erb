<% provide(:title, @user.name) %>
<% content_for(:submenu) do %>
	<%= render 'subnav'  %>
<% end %>

<div id="show_user" class="content user_info">
		
			<h2><%= @user.name %></h2>

			<aside>
				<% if @user.recipes.any? %>
					<h4>Last recipes</h4>
					<ul>
						<%= render @recipes  %>
					</ul>					
				<% end %>
			</aside>

</div>

